<% provide(:title, '日記編集') %>
<% provide(:home, 'bg-article') %>
<% provide(:navbar_text, 'black') %>

<div class="container">
<div class="w-50"><%= render 'shared/flash_messages' %></div>

  <h1 class="mt-5 mb-5 text-center"><%= link_to "Diary", articles_path %>の編集</h1>
  <div class="form">
    <div class="form-group mb-5">
      <%= form_with model: @article,  url: article_path(@article.id) do |f| %>
        <%= f.text_area :content, class: "form-control form_edit m-auto", rows: "25" %>
        <%= f.submit class: "btn btn-primary w-75 mt-3 mx-auto d-block" %>
      <% end %>
    </div>  
  </div>
</div>
