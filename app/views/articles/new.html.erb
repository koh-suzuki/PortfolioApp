<% provide(:title, '日記作成') %>
<% provide(:home, 'bg-article') %>
<% provide(:navbar_text, 'black') %>

<div class="container">
<div class="w-50"><%= render 'shared/flash_messages' %></div>

  <h1 class="mt-3 mb-5 text-center">新規作成</h1>
  <div class="form">
    <div class="form-group mb-5">
      <%= form_with model: @article,  url: articles_path do |f| %>
        <%= f.text_area :content, class: "form-control form_edit m-auto",
                                  rows: "25",
                                  required: true %>
        <%= f.submit '新規作成', class: "btn btn-info w-75 mt-5 mx-auto d-block" %>
      <% end %>
    </div>  
  </div>
</div>