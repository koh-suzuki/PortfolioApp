<% provide(:home, 'img') %>
<div class="w-50"><%= render 'shared/flash_messages' %></div>
<div class="wrapper">
  <div class="container-login">
    <h1 class="text-center text-white mb-4"><%= t('.sign_in') %></h1>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group w-75 mx-auto">
        <%= f.email_field :email, placeholder: "Email", utofocus: true,
                                                   autocomplete: 'email', 
                                                   class: 'form-control form-text',
                                                   required: true,
                                                   maxlength: '30' %>
      </div>
    
      <div class="form-group w-75 mx-auto">
        <%= f.password_field :password, placeholder: "Password", autocomplete: 'current-password',  
                                                   class: 'form-control form-text',
                                                   minlength: '6',
                                                   maxlength: '30',
                                                   required: true %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check ml-12">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label text-white' do %>
            <%= resource.class.human_attribute_name('remember_me') %>
          <% end %>
        </div>
      <% end %>
    
      <div class="form-group text-center">
        <%= f.submit  t('.sign_in'), class: 'btn btn-primary button w-75 mx-auto.d-block' %>
      </div>
    <% end %>
    
    <%= render 'devise/shared/links' %>
  </div>
</div>
