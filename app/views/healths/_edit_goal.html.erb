<div class="modal-dialog modal-width">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">目標編集</h4>
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <div class="modal-body">
      <%= form_with model: @health, url: user_healths_update_goal_path(@user, @health), method: :patch do |f| %>
      <form>
        <div class="form-group">
          <%= f.label :weight_goal, "目標体重" %>
          <%= f.number_field :weight_goal, class: "form-control",
                                            step: "0.1",
                                        required: true %>
        </div>
        <div class="form-group">
          <%= f.label :body_fat_goal, "目標体脂肪率" %>
          <%= f.number_field :body_fat_goal, class: "form-control",
                                              step: "0.1",
                                          required: true %>
        </div>
        <div class="form-group text-center">
          <%= f.submit "登録", class: "btn-flat-border w-50" %>
          <button type="button" class="bbtn-cancel-border" data-dismiss="modal">
            キャンセル
          </button>
        </div>
      </form>
      <% end %>
    </div>
  </div>
</div>


        