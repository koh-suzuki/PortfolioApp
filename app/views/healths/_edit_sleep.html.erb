<div class="modal-dialog modal-width">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">睡眠情報</h4>
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <div class="modal-body">
    <%= form_with model: @health, url: user_healths_update_sleep_path(@user, @health) do |f| %>
    <form>
      <div class="form-group">
          <%= f.label :bedtime_at, "前日の就寝時間" %>
          <%= f.time_field :bedtime_at, class: "form-control", 
                                    autofocus: true,
                                     required: true %>
      </div>
      <div class="form-group">
        <%= f.label :getuptime_at %>
        <%= f.time_field :getuptime_at, class: "form-control" %>
      </div>
      <div class="form-group text-center">
        <%= f.submit "登録", class: "btn-flat-border w-50" %>
        <button type="button" class="bbtn-cancel-border" data-dismiss="modal">
          キャンセル
        </button>
      </div>
    </form>
    <% end %>
    </div>
  </div>
</div>

